<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/idBook"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nameBook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameBook"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/authorBook"
        app:layout_constraintStart_toEndOf="@+id/idBook"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authorBook"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nameBook"
        app:layout_constraintStart_toEndOf="@+id/yearRelease"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/yearRelease"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/yearToLibrary"
        app:layout_constraintStart_toEndOf="@+id/authorBook"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/yearToLibrary"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/DateIssue"
        app:layout_constraintStart_toEndOf="@+id/yearRelease"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DateIssue"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yearToLibrary"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>