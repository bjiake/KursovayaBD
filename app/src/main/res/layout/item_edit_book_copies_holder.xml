<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/editBookCopiesId"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:minHeight="32dp"
        android:minWidth="32dp"
        android:text="id"/>

    <EditText
        android:id="@+id/editBookCopiesReturnDate"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/editBookCopiesId"
        app:layout_constraintStart_toStartOf="parent"
        android:minHeight="48dp"
        android:minWidth="32dp"
        android:text="ReturnDate"/>

    <EditText
        android:id="@+id/editBookCopiesBorrowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editBookCopiesReturnDate"
        app:layout_constraintStart_toStartOf="parent"
        android:minHeight="48dp"
        android:minWidth="32dp"
        android:text="BorrowDate"/>

    <EditText
        android:id="@+id/editBookCopiesPointId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editBookCopiesBorrowDate"
        app:layout_constraintStart_toStartOf="parent"
        android:minHeight="48dp"
        android:minWidth="32dp"
        android:text="PointId"/>

    <Button
        android:id="@+id/deleteBtnBookCopies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editBookCopiesPointId" />


</androidx.constraintlayout.widget.ConstraintLayout>